doctype html
html(lang='en')
  head
     title Jade
     style.
       table{
       border-collapse: collapse;
       margin-top: 30px;
       margin-left: 70px;
       margin-right: 30px;
       }
       .heading{
       font-weight: bold;
       width: 150px;
       }
       .value{
       width: 500px;
       }
   body
     div(style='margin-top: 50px')
       h1(style='margin-left: 70px;') Events
       hr(style=' margin-top:0px; height:10px;border:none;color:#333;background-color:#333; margin-left: 70px; margin-right: 73px;')
       each event, index in eventsReceived
           p(style='margin-left: 70px;')= index+1
            table(border='1')
                tbody
                    tr
                        td.heading Name
                        td.value= event.name
                    tr
                        td.heading Email Address
                        td.value= event.emailAddress
                    tr
                        td.heading Phone Number
                        td.value= event.phoneNumber
                    tr
                        td.heading Reservation Date
                        td.value= event.reservationDate
                    tr
                        td.heading Reservation Time
                        td.value= event.reservationTime
                    tr
                        td.heading Persons
                        td.value= event.selectPersons
                    
                    

